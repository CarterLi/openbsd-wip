#!/bin/sh

##########
# wrapper script for arx libertatis executable
##########

# make game directories if they don't exist yet
mkdir -p ~/.local/share/arx/{data,user,config}

cd ${TRUEPREFIX}/share/arx && bin/arx --data-dir=~/.local/share/arx/data --user-dir=~/.local/share/arx/user --config-dir=~/.local/share/arx/config
