# $OpenBSD: Makefile,v 1.24 2018/06/25 20:44:13 landry Exp $

COMMENT-main =		infinite-world block sandbox game client
COMMENT-server =	infinite-world block sandbox game server

PKGNAME-main =		minetest-${GH_TAGNAME}
PKGNAME-server =	minetest-server-${GH_TAGNAME}

GH_ACCOUNT =		minetest
GH_PROJECT =		minetest
GH_TAGNAME =		0.4.17.1

CATEGORIES =		games x11
REVISION-main =		2

HOMEPAGE =		http://www.minetest.net/

MAINTAINER =		Leonid Bobrov <mazocomp@disroot.org>

# source LGPLv2.1/ datas CC BY-SA 3.0
PERMIT_PACKAGE_CDROM =	Yes

MULTI_PACKAGES =	-main -server

.include <bsd.port.arch.mk>

cWANTLIB += ${COMPILER_LIBCXX} c curl curses form gmp hiredis
cWANTLIB += iconv intl jsoncpp leveldb luajit-${MODLUA_VERSION}
cWANTLIB += m pq spatialindex sqlite3 z

WANTLIB-main += ${cWANTLIB} GL GLU ICE Irrlicht SM X11 Xext
WANTLIB-main += Xxf86vm bz2 freetype jpeg ogg openal png
WANTLIB-main += vorbis vorbisfile
WANTLIB-server = ${cWANTLIB}

MODULES =		devel/cmake \
			lang/lua

BUILD_DEPENDS =		devel/gettext-tools \
			devel/doxygen

RUN_DEPENDS-main =	devel/desktop-file-utils \
			games/minetest,-server \
			x11/gtk+3,-guic

cLIB_DEPENDS =		databases/leveldb \
			databases/libhiredis \
			databases/sqlite3 \
			databases/postgresql \
			devel/gmp \
			devel/jsoncpp \
			geo/spatialindex \
			lang/luajit \
			net/curl

LIB_DEPENDS-main =	${cLIB_DEPENDS} \
			audio/libvorbis \
			audio/openal \
			x11/irrlicht

LIB_DEPENDS-server =	${cLIB_DEPENDS} \
			devel/gettext

CONFIGURE_ARGS =	-DENABLE_GETTEXT=TRUE -DCUSTOM_MANDIR=${PREFIX}/man
CONFIGURE_ARGS+=	-DENABLE_SYSTEM_JSONCPP=TRUE -DUSE_GPROF=TRUE
CONFIGURE_ENV +=	CXXFLAGS="-I${X11BASE}/include"

.if ! ${BUILD_PACKAGES:M-main}
CONFIGURE_ARGS+=	-DBUILD_CLIENT=FALSE
.endif

.if ${BUILD_PACKAGES:M-server}
CONFIGURE_ARGS+=	-DBUILD_SERVER=TRUE
.endif

NO_TEST =		Yes
.include <bsd.port.mk>
